<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:templates="clr-namespace:ZincirApp.Templates"
             xmlns:ui="clr-namespace:ZincirApp.Locale"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="450"
             x:Class="ZincirApp.Views.SettingView">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <templates:SettingControl Header="{x:Static ui:UiTexts.Language}" Description="{x:Static ui:UiTexts.NeedReboot}">
                <templates:SettingControl.SettingContent>
                    <ComboBox Name="LanguageComboBox" 
                              ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding LanguageSelectedItem, Mode=TwoWay}">
                    </ComboBox>
                </templates:SettingControl.SettingContent>
            </templates:SettingControl>
            <templates:SettingControl Header="{x:Static ui:UiTexts.ThemeLabel}" Description="{x:Static ui:UiTexts.ThemeDescription}">
                <templates:SettingControl.SettingContent>
                    <Button Name="AppearanceSettingsButton" CornerRadius="20"
                            Command="{Binding OpenAppearanceSettingsCommand}"
                            Content="{avalonia:MaterialIconTextExt Kind=ArrowRight, TextFirst=True, Text={x:Static ui:UiTexts.Dark}}"/>
                </templates:SettingControl.SettingContent>
            </templates:SettingControl>

        </StackPanel>
    </ScrollViewer>
    
</UserControl>
